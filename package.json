{
  "name": "invoicerapp",
  "version": "1.0.0",
  "description": "An app I made for my father to make invoices more easily, anywhere with anything (that can accesss the web).",
  "main": "index.js",
  "scripts": {
    "generate-css": "sass -t compressed --update ./styles/main.scss:./styles/build/generated.css",
    "reduce-css": "purgecss --css styles/build/generated.css --content index.html --output styles/build/reduced.css",
    "build-css": "npm run generate-css && npm run reduce-css"
  },
